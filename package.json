{
  "name": "discord-irc",
  "version": "2.7.2",
  "description": "Connects IRC and Discord channels by sending messages back and forth.",
  "keywords": [
    "discord",
    "irc",
    "gateway",
    "bot",
    "discord-irc",
    "reactiflux"
  ],
  "engines": {
    "node": ">=6.0.0"
  },
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:reactiflux/discord-irc.git"
  },
  "bugs": {
    "url": "https://github.com/reactiflux/discord-irc/issues"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "babel lib --out-dir dist",
    "prepare": "npm run build",
    "lint": "eslint . --ignore-path .gitignore",
    "coverage": "nyc --require @babel/register mocha -- 'test/*.test.js'",
    "report": "nyc report --reporter=text-lcov | coveralls",
    "test": "npm run lint && npm run coverage"
  },
  "author": {
    "name": "Reactiflux"
  },
  "license": "MIT",
  "dependencies": {
    "check-env": "1.3.0",
    "commander": "2.20.0",
    "discord.js": "11.5.1",
    "irc-colors": "1.5.0",
    "irc-formatting": "1.0.0-rc3",
    "irc-upd": "0.10.0",
    "lodash": "^4.17.15",
    "simple-markdown": "^0.7.1",
    "strip-json-comments": "3.0.1",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.7.6",
    "@babel/register": "^7.7.4",
    "@istanbuljs/nyc-config-babel": "^2.1.1",
    "babel-eslint": "^10.0.3",
    "babel-plugin-istanbul": "^5.2.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0"
  }
}
